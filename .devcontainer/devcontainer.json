{
	"name": "devpacks",
	"image": "ghcr.io/chuxel/devpacks/devcontainer",
	"runArgs": ["--shm-size=1g"],
	"extensions": [
		"mads-hartmann.bash-ide-vscode",
		"rogalmic.bash-debug",
		"ms-azuretools.vscode-docker",
		"EditorConfig.EditorConfig",
		"streetsidesoftware.code-spell-checker"
	],
	"forwardPorts": [6080],
	"portsAttributes": {
		"6080": {
			"label": "Desktop web client",
			"onAutoForward": "ignore"
		}
	},
	"remoteUser": "vscode",
	"features": {
		"docker-in-docker": "latest",
		"desktop-lite": "latest",
		"golang": "1.17.10",
		"node": "16.15.1",
		"chuxel/devcontainer-features/packcli": "latest",
		"chuxel/devcontainer-features/vscode": {
			"edition": "both"
		},
		"chuxel/devcontainer-features/googlechrome": "latest"
	},
	"postCreateCommand": "sudo chmod -R g+rw /usr/local/share/nvm/versions && . /usr/local/share/nvm/nvm.sh && npm install -g @devcontainers/cli"
}